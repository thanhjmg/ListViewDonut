<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/editSearch"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDonut"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:text="Donut"
        app:layout_constraintStart_toStartOf="@+id/editSearch"
        app:layout_constraintTop_toBottomOf="@+id/editSearch" />

    <Button
        android:id="@+id/btnPinkDonut"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:text="PINK DONUT"
        app:layout_constraintStart_toEndOf="@+id/btnDonut"
        app:layout_constraintTop_toBottomOf="@+id/editSearch" />

    <Button
        android:id="@+id/btnFloadting"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:text="Floadting"
        app:layout_constraintEnd_toEndOf="@+id/editSearch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnPinkDonut"
        app:layout_constraintTop_toBottomOf="@+id/editSearch" />

    <ListView
        android:id="@+id/layoutDonutItem"
        android:layout_width="411dp"
        android:layout_height="606dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPinkDonut"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>